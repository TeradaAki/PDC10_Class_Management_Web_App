                    <label><b>Phone Number</b></label>
                    <input type="text" placeholder="please enter your phone number" name="phoneNumber">
                </div>
                <div>
                    <label>Program</label>
                    <select class="select_opt" name="program">
                        <option selected>Select Program</option>
                        <option>BS Computer Science</option>
                        <option>BS Information Technology</option>
                        <option>Bachelor of Multimedia Arts</option>
                    </select>
                </div>
                <div class="btn">
                    <input type="submit" class="btn btn-primary" value="Submit" name="submitStudent">
