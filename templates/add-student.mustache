    .Div_1, .select {
        background: #4E4E50;
        border-radius: 15px 15px;
        width: 50%;
        position: absolute;
        top: 10%;
        left: 15%;
        width: 70%;
        text-align: center;
        
    }
    label {
        color: white;
    }
    h2 {
        color: white;
        text-align: center;
        padding: 10px;
    }
    input {
        width: 40%;
        padding: 10px 10px;
        margin: 15px 0;
        border-bottom-style: solid;
        border-bottom-width: thin;
        border-radius: 20px 20px;
        position: relative;
        left: 0%;
        border-color: #77BFE2;
        background: #FCE786;
        border: 5px inset #77BFE2;
    }
    .btn {
        position: static;
        width: 30%;
