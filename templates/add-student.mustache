<body>
    <div class="Div_1">
        <div>
            <h2>New Student</h2>
            <form method="POST" action="create-student.php">
                <div>
                    <label><b>Name</b></label>
                    <input type="text" placeholder="Please enter your full name" name="name">
                </div>
                <div>
                    <label><b>Student Number</b></label>
                    <input type="text" placeholder="Please enter your student number" name="studentNumber">
                </div>
